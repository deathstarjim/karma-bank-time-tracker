                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("LogOut", "Login", new { Area = "OrgAdmins" })'>
                                <i class="far fa-circle"></i>
                                <p>Log Out</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="fas fa-hands-helping"></i>
                        <p>
                            Volunteer Items
                            <i class="right fa fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href='@Url.Action("Index", "VolunteerOpportunities", new { Area = "OrgAdmins" })' class="nav-link">
                                <i class="far fa-circle"></i>
                                <p>Volunteer Opportunities</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href='@Url.Action("Index", "VolMgmt", new { Area = "OrgAdmins" })' class="nav-link">
                                <i class="far fa-circle"></i>
                                Volunteer Management
                            </a>
                        </li>
                    </ul>
                </li>
                
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
