@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.BaseOrgAdminViewModel

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href='@Url.Action("Index", "Administrators", new { Area = "OrgAdmins" })' class="brand-link">
        <img src="~/Areas/OrgAdmins/Images/OCBC_Small_Logo_100.png" alt="AdminLTE Logo" class="brand-image elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">OCBC Admin</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            @*<div class="image">
                <img src="~/Areas/OrgAdmins/Images/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>*@
            <div class="info">
                <a href='@Url.Action("AdministratorDetails", "Administrators", new { Area = "OrgAdmins", administratorId = Model.CurrentAdministrator.Id })' class="d-block">
                    @Model.CurrentAdministrator.FirstName @Model.CurrentAdministrator.LastName
                </a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="fas fa-user-edit"></i>
                        <p>
                            Administrator Items
                            <i class="right fa fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Administrators", new { Area = "OrgAdmins" })'>
                                <i class="far fa-circle"></i>
                                <p>Administrator Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("AdministratorRegistration", "Administrators", new { Area = "OrgAdmins" })'>
                                <i class="far fa-circle"></i>
                                <p>Add Administrator</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "TransactionTypes", new { Area = "OrgAdmins" })'>
                                <i class="far fa-circle"></i>
                                <p>Transaction Types</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Reports", new { Area = "OrgAdmins" })'>
