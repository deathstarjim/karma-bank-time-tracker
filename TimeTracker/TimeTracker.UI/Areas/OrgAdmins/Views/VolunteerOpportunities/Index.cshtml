@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.VolunteerOpportunityViewModel

@{
    ViewBag.Title = "Manage Volunteer Opportunities";
    Layout = "~/Areas/OrgAdmins/Views/Shared/_OrgAdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Volunteer Opportunities</h1>
            </div><!-- /.col -->
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href='@Url.Action("Index", "Administrators", new { Area = "OrgAdmins" })'>Home</a>
                    </li>
                    <li class="breadcrumb-item active">Volunteer Opportunities</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Volunteer Opportunities</h3>
                </div>
                <div class="card-body">
                    @Html.Partial("_VolOppsListing", Model)
                </div>
            </div>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create New Volunteer Opportunity</h3>
                </div>
                <div class="card-body">
                    @Html.EditorFor(model => Model.CurrentOpportunity)
                </div>
            </div>
        </div>
    </div>
</div>