@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.VolunteerOpportunityViewModel

@{
    ViewBag.Title = "Manage Volunteer Opportunities";
    Layout = "~/Areas/OrgAdmins/Views/Shared/_OrgAdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Volunteer Opportunities</h1>
            </div><!-- /.col -->
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href='@Url.Action("Index", "Administrators", new { Area = "OrgAdmins" })'>Home</a>
                    </li>
                    <li class="breadcrumb-item active">Volunteer Opportunities</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Volunteer Opportunities</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-responsive table-hover display" id="VolunteerOpportunities">
                        <thead>
                            <tr>
                                <th>Edit Opportunity</th>
                                <th>Name</th>
                                <th>Credit Value</th>
                                <th>Volunteer Limit</th>
                                <th>Visible to Volunteers?</th>
                                <th>Offsite?</th>
                                <th>Start Date / Time</th>
                                <th>End Date / Time</th>
                                <th>Opportunity Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.VolunteerOpportunities != null && Model.VolunteerOpportunities.Count > 0)
                            {
                                foreach (var opp in Model.VolunteerOpportunities)
                                {
                                    <tr>
                                        <td>
                                            <a href='@Url.Action("EditVolunteerOpportunity", "VolunteerOpportunities", new { volunteerOpportunityId = opp.Id })'>
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                        <td>@opp.Name</td>
                                        <td>@opp.CreditValue</td>
                                        <td>@opp.VolunteerLimit</td>
                                        <td>@opp.IsVisibleToVolunteer.IsChecked</td>
                                        <td>@opp.IsOffsite.IsChecked</td>
                                        <td>
                                            @if (opp.StartDateTime != null && opp.StartDateTime != DateTime.MinValue)
                                            {
                                                @opp.StartDateTime
                                            }
                                        </td>
                                        <td>
                                            @if (opp.EndDateTime != null && opp.EndDateTime != DateTime.MinValue)
                                            {
                                                @opp.EndDateTime
                                            }
                                        </td>
                                        <td>@opp.Description</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create New Volunteer Opportunity</h3>
                </div>
                <div class="card-body">
                    @Html.EditorFor(model => Model.CurrentOpportunity)
                </div>
            </div>
        </div>
    </div>
</div>