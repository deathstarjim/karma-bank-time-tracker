@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.TransactionTypesViewModel

@{
    ViewBag.Title = "Transaction Types";
    Layout = "~/Areas/OrgAdmins/Views/Shared/_OrgAdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Administrator Details for @Model.CurrentAdministrator.FullName</h1>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href='@Url.Action("Index", "Administrators", new { Area = "OrgAdmins" })'>Home</a>
                    </li>
                    <li class="breadcrumb-item active">Transaction Types</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @Html.Partial("_TransactionTypesList", Model)
    </div>
    <div class="col-md-4">
        @Html.Partial("_CreateTransactionType", Model)
    </div>
    <div class="col-md-4">
        @Html.Partial("_DeleteTransactionType", Model)
    </div>
</div>

<!-- modal placeholder-->
<div id='edit-transaction-type' class="modal" role="dialog">
    <div id='edit-transaction-type-container'></div>
</div>