@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.TransactionTypesViewModel

@using (Html.BeginForm("UpdateTransactionType", "TransactionTypes", FormMethod.Post, new { autocomplete = "off" }))
{ 
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Edit Transaction Type</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @Html.EditorFor(model => Model.CurrentTransactionType)
            </div>
            <div class="modal-footer">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}