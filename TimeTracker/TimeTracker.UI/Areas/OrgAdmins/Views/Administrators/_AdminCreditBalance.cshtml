@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.AdministratorsViewModel

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-header">@Model.SelectedAdministrator.FullName</h3>
        </div>
        <div class="card-body box-profile">
            <ul class="list-group list-group-unbordered mb-3">
                <li class="list-group-item">
                    <b>First Name:</b> <span class="float-right">@Model.SelectedAdministrator.FirstName</span>
                </li>
                <li class="list-group-item">
                    <b>Last Name:</b> <span class="float-right">@Model.SelectedAdministrator.LastName</span>
                </li>
                <li class="list-group-item">
                    <b>Email Address:</b> <a class="float-right" href="mailto:@Model.SelectedAdministrator.EmailAddress">@Model.SelectedAdministrator.EmailAddress</a>
                </li>
                <li class="list-group-item">
                    <b>Phone Number:</b> <a class="float-right" href="tel:@Model.SelectedAdministrator.PhoneNumber">@Model.SelectedAdministrator.PhoneNumber</a>
                </li>
                <li class="list-group-item">
                    <b>Total Credits:</b> <a class="float-right">@Model.SelectedAdministrator.CreditBalance</a>
                </li>
                <li class="list-group-item">
                    <button class="btn btn-primary edit-admin-info" data-toggle="modal" data-target="#edit-admin-info" data-id="@Model.SelectedAdministrator.Id">Edit Information</button>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- modal placeholder-->
<div id='edit-admin-info' class="modal" role="dialog">
    <div id='edit-admin-container'></div>
</div>
