@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.ReportsViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-header">Volunteer Summary by Date Range</h3>
    </div>
    <div class="card-body box-profile">
        <div class="row mb-2">
            <div class="col-md-12">
                <!-- Date range -->
                @using (Html.BeginForm("VolSummaryByDateRange", "Reports", FormMethod.Post, new { autocomplete = "off" }))
                {
                    <div class="form-group">
                        <label>Date range:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                            @Html.EditorFor(model => Model.VolSummaryDateRange, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Partial("_ExportToExcelButton")
                    </div>
                }
            </div>

        </div>
    </div>
</div>