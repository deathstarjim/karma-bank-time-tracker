@model TimeTracker.UI.Areas.OrgAdmins.ViewModels.VolMgmtViewModel

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-header">Time Punches</h3>
        </div>
        <div class="card-body box-profile">
            <table class="table table-striped table-responsive table-hover punches-transactions" id="VolunteerPunches">
                <thead>
                    <tr>
                        <th>Volunteer Opportunity</th>
                        <th>Punch In Date / Time</th>
                        <th>Punch Out Date / Time</th>
                        <th>Credits Earned</th>
                        <th>Edit Punch</th>
                        <th>Delete Punch</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var punch in Model.VolTimePunches)
                    {
                        <tr>
                            <td>@punch.VolunteerOpportunityName</td>
                            <td>@punch.PunchInDateTime.ToShortDateString() @punch.PunchInDateTime.ToShortTimeString()</td>
                            <td>@punch.PunchOutDateTime.ToShortDateString() @punch.PunchOutDateTime.ToShortTimeString()</td>
                            <td>@punch.CreditsEarned</td>
                            <td>
                                <button class="btn btn-primary edit-punch" data-toggle="modal" data-target="#edit-punch" data-id="@punch.Id">Edit Punch</button>
                            </td>
                            <td>
                                <a href='@Url.Action("DeletePunch", "VolMgmt", new { Area = "OrgAdmins", timePunchId = punch.Id, volunteerId = punch.VolunteerId })' class="btn btn-danger">
                                    Delete Punch
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- modal placeholder-->
<div id='edit-punch' class="modal" role="dialog">
    <div id='edit-punch-container'></div>
</div>