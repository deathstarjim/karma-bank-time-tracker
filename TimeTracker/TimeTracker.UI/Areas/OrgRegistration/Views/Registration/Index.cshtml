                                            @Html.EditorFor(model => model.CurrentOrg.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Organization Name", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.CurrentOrg.Name, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-6 col-12-xsmall">
                                            @Html.EditorFor(model => model.CurrentOrg.WebsiteUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "Website URL", @required = "required" } })
                                            @Html.ValidationMessageFor(model => model.CurrentOrg.WebsiteUrl, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-12">
                                            @Html.TextAreaFor(model => Model.CurrentOrg.Description, new { rows = "6", cols = "55", @class = "form-control",
                                                placeholder = "What is your organizations mission?" })
                                        </div>

                                        <div class="col-12">
                                            <ul class="actions">
                                                <li><input type="submit" value="Save Information" class="primary" /></li>
                                            </ul>
                                        </div>
                                    </div>
                                </form>
                            </section>
