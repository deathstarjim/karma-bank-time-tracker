@model TimeTracker.UI.Areas.Volunteers.ViewModels.VolunteerViewModel

@if (Model.Volunteers != null && Model.Volunteers.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-responsive table-striped table-hover">
                <thead>
                    <tr>
                        <th>Volunteer Name</th>
                        <th>Nickname / Phrase</th>
                        <th>Emergency Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <tr>
                            <td>@volunteer.FullName</td>
                            <td>@volunteer.SecurityPhrase</td>
                            <td>@volunteer.EmergencyContactPhone</td>
                            <td>
                                @if (Model.ControllerName == "Volunteers")
                                {
                                    <a class="btn btn-primary" href='@Url.Action("OpportunitiesList", "Volunteers", new { volunteerId = volunteer.Id })'>This is me!</a>
                                }

                                @if (Model.ControllerName == "TimePunch")
                                {
                                    <a class="btn btn-primary" href='@Url.Action("GetVolunteerHours", "TimePunch", new { volunteerId = volunteer.Id })'>This is me!</a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}