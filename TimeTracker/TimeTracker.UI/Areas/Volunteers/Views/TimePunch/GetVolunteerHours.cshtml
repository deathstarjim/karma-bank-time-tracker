@model TimeTracker.UI.Areas.Volunteers.ViewModels.VolunteerViewModel

@{
    ViewBag.Title = "Volunteer Time Punches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row margin-top">
        <div class="col-md-12">
            <h2>Credit Summary for @Model.CurrentVolunteer.FullName</h2>
            <h3>Current Credit Balance: @Model.CurrentVolunteer.CreditBalance</h3>
        </div>
    </div>

    <div class="row">
        <!-- Time Punch Table -->
        <div class="col-md-12 margin-top">
            @if(Model.OpenTimePunches != null && Model.OpenTimePunches.Count > 0)
            {
                <h3>Your time punch records</h3>

                <table class="table table-responsive table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Volunteer Name</th>
                            <th>Opportunity Name</th>
                            <th>Punch In Date / Time</th>
                            <th>Punch Out Date / Time</th>
                            <th>Credits Earned</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var punch in Model.OpenTimePunches)
                        {
                            <tr>
                                <td>@punch.VolunteerFullName</td>
                                <td>@punch.VolunteerOpportunityName</td>
                                <td>@punch.PunchInDateTime.ToShortDateString() @punch.PunchInDateTime.ToShortTimeString()</td>
                                <td>@punch.PunchOutDateTime.ToShortDateString() @punch.PunchOutDateTime.ToShortTimeString()</td>
                                <td>@punch.CreditsEarned</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            @if(Model.OpenTimePunches.Count == 0)
            {
                <h4>No time punch records found</h4>
            }
        </div>

    </div>

	<div class="row margin-top">
        <div class="col-md-12">
            @if (Model.VolunteerTransactions != null && Model.VolunteerTransactions.Count > 0)
	        {
                <h3>Your purchases</h3>

                <table class="table table-responsive table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Volunteer Name</th>
                            <th>Purchase Date / Time</th>
                            <th>Purchase Notes</th>
                            <th>Credits</th>
                            <th>Purchase Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var transaction in Model.VolunteerTransactions)
                        {
                            <tr>
                                <td>@transaction.VolunteerName</td>
                                <td>@transaction.CreateDateTime.ToShortDateString() @transaction.CreateDateTime.ToShortTimeString()</td>
                                <td>@transaction.Notes</td>
                                <td>@transaction.CreditAmount</td>
                                <td>@transaction.TransactionType.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
	        }

            @if(Model.VolunteerTransactions.Count == 0)
            {
                <h4>No purchases found</h4>
            }
        </div>
    </div> 


